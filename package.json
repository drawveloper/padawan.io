{
  "name": "padawan.io",
  "version": "0.1.0",
  "description": "Mentoria em desenvolvimento de software",
  "scripts": {
    "prestart": "npm run remove-dist",
    "start": "npm-run-all --parallel lint:tools open:src",
    "open:src": "babel-node tools/srcServer.js",
    "open:dist": "babel-node tools/distServer.js",
    "lint:tools": "eslint webpack.config.js tools",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "remove-dist": "rimraf ./dist",
    "build:html": "babel-node tools/buildHtml.js",
    "prebuild": "npm-run-all clean-dist build:html",
    "build": "babel-node tools/build.js",
    "deploy": "npm run build && gh-pages-deploy"
  },
  "author": "Guilherme Rodrigues <gui@firstdoit.com>",
  "license": "MIT",
  "dependencies": {
    "connect-history-api-fallback": "1.3.0",
    "object-assign": "4.1.0",
    "react": "0.14.7",
    "react-dom": "0.14.7",
    "react-redux": "4.4.1",
    "react-router": "2.0.1",
    "redux": "3.6.0",
    "reset-css": "2.2.0"
  },
  "devDependencies": {
    "autoprefixer": "6.6.1",
    "babel-cli": "6.18.0",
    "babel-core": "6.21.0",
    "babel-eslint": "7.1.1",
    "babel-loader": "6.2.10",
    "babel-plugin-react-display-name": "2.0.0",
    "babel-plugin-react-transform": "2.0.2",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-1": "6.16.0",
    "browser-sync": "2.18.6",
    "chai": "3.5.0",
    "cheerio": "0.22.0",
    "colors": "1.1.2",
    "copy-webpack-plugin": "4.0.1",
    "cross-env": "3.1.4",
    "css-loader": "0.26.1",
    "entities": "1.1.1",
    "eslint": "3.13.0",
    "eslint-loader": "1.6.1",
    "eslint-plugin-react": "6.9.0",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.9.0",
    "gh-pages-deploy": "0.4.2",
    "node-sass": "4.1.1",
    "npm-run-all": "4.0.0",
    "postcss-loader": "1.2.1",
    "react-transform-catch-errors": "1.0.2",
    "react-transform-hmr": "1.0.4",
    "redbox-react": "1.3.3",
    "resolve-url-loader": "1.6.1",
    "rimraf": "2.5.4",
    "sass-loader": "4.1.1",
    "style-loader": "0.13.1",
    "webpack": "1.14.0",
    "webpack-dev-middleware": "1.9.0",
    "webpack-hot-middleware": "2.15.0",
    "yargs": "6.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/firstdoit/padawan.io"
  },
  "gh-pages-deploy": {
    "staticpath": "dist",
    "cname": "padawan.io"
  }
}
