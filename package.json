{
  "name": "padawan.io",
  "version": "0.1.0",
  "description": "Mentoria em desenvolvimento de software",
  "scripts": {
    "prestart": "npm run remove-dist",
    "start": "npm-run-all --parallel lint:tools test:watch open:src",
    "open:src": "babel-node tools/srcServer.js",
    "open:dist": "babel-node tools/distServer.js",
    "lint:tools": "eslint webpack.config.js tools",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "remove-dist": "rimraf ./dist",
    "build:html": "babel-node tools/buildHtml.js",
    "prebuild": "npm-run-all clean-dist build:html",
    "build": "npm run test && babel-node tools/build.js",
    "deploy": "npm run build && gh-pages-deploy",
    "test": "cross-env NODE_ENV=test mocha --reporter progress --compilers js:babel-core/register --recursive \"./src/**/*.spec.js\"",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Guilherme Rodrigues <gui@firstdoit.com>",
  "license": "MIT",
  "dependencies": {
    "connect-history-api-fallback": "1.1.0",
    "object-assign": "4.0.1",
    "react": "0.14.7",
    "react-dom": "0.14.7",
    "react-redux": "4.4.1",
    "react-router": "2.0.1",
    "redux": "3.3.1"
  },
  "devDependencies": {
    "babel-cli": "6.6.5",
    "babel-core": "6.7.2",
    "babel-eslint": "5.0.0",
    "babel-loader": "6.2.4",
    "babel-plugin-react-display-name": "2.0.0",
    "babel-plugin-react-transform": "2.0.2",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-stage-1": "6.5.0",
    "browser-sync": "2.11.1",
    "chai": "3.5.0",
    "cheerio": "0.20.0",
    "colors": "1.1.2",
    "cross-env": "1.0.7",
    "css-loader": "0.23.1",
    "entities": "1.1.1",
    "eslint": "2.2.0",
    "eslint-loader": "1.3.0",
    "eslint-plugin-react": "4.2.3",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.8.5",
    "gh-pages-deploy": "0.4.1",
    "mocha": "2.4.5",
    "node-sass": "3.4.2",
    "npm-run-all": "1.6.0",
    "react-transform-catch-errors": "1.0.2",
    "react-transform-hmr": "1.0.4",
    "redbox-react": "1.2.2",
    "rimraf": "2.5.2",
    "sass-loader": "3.2.0",
    "style-loader": "0.13.0",
    "webpack": "1.12.14",
    "webpack-dev-middleware": "1.5.1",
    "webpack-hot-middleware": "2.10.0",
    "yargs": "4.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/firstdoit/padawan.io"
  },
  "gh-pages-deploy": {
    "staticpath": "dist",
    "cname": "padawan.io"
  }
}
